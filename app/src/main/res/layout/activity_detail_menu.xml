<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.primadianindito_1202154151_modul3.DetailMenu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lblImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/aqua"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/lblJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aqua"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lblDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:maxHeight="150dp"
                android:text="Aqua adalah sebuah merek air minum dalam kemasan (AMDK) yang diproduksi oleh PT Aqua Golden Mississippi Tbk di Indonesia sejak tahun 1973. Selain di Indonesia, Aqua juga dijual di Malaysia, Singapura, dan Brunei." />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgIsi"
                    android:layout_width="220dp"
                    android:layout_height="210dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/galon" />

                <TextView
                    android:id="@+id/lblStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgIsi"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:text="L"/>

                <Button
                    android:id="@+id/btnIsiKurang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgIsi"
                    android:background="@drawable/minus" />

                <Button
                    android:id="@+id/btnIsiTambah"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgIsi"
                    android:background="@drawable/tambah" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
